<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/green01</item>
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/FishingActionBar</item>
        <item name="actionBarStyle">@style/FishingActionBar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/green04</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="FishingActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/actionbar_color</item>
        <item name="background">@color/actionbar_color</item>
        <item name="android:textColor">@color/actionbar_text_color</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
